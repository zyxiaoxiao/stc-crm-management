.header {
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 48px;
	padding-left: 5px;
	padding-right: 15px;
	background-color: #ffffff;
	border-bottom: 1px solid #d9dbdd;

	.screen-full {
		padding-left: 10px;
		padding-right: 10px;
		height: 46px;
		line-height: 46px;
	}

	.screen-full:hover {
		background: #f6f6f6;
	}

	.header-lf {
		.collapse-icon {
			font-size: 22px;
			cursor: pointer;
		}
	}
	.header-ri {
		.icon-style {
			font-size: 20px;
			color: rgb(0 0 0 / 75%);
			cursor: pointer;
		}
		.username {
			font-size: 15px;
			color: rgb(0 0 0 / 75%);
			padding-left: 10px;
			padding-right: 10px;
			cursor: pointer;
		}
		
		.username:hover {
			color: #409eff;
		}
		
		.logOut{
			cursor: pointer;
		}
		
		.logOut:hover {
			color: #409eff;
		}
	}
}
